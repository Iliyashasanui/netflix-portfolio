<script id="carousel-functionality">
document.addEventListener('DOMContentLoaded', function() {
const carousel = document.getElementById('project-carousel');
const prevBtn = document.getElementById('prev-btn');
const nextBtn = document.getElementById('next-btn');
let currentIndex = 0;
const cardWidth = 320 + 24;
const visibleCards = Math.floor(window.innerWidth / cardWidth);
const totalCards = carousel.children.length;
const maxIndex = Math.max(0, totalCards - visibleCards);
function updateCarousel() {
const translateX = -currentIndex * cardWidth;
carousel.style.transform = `translateX(${translateX}px)`;
}
nextBtn.addEventListener('click', function() {
if (currentIndex < maxIndex) {
currentIndex++;
updateCarousel();
}
});
prevBtn.addEventListener('click', function() {
if (currentIndex > 0) {
currentIndex--;
updateCarousel();
}
});
window.addEventListener('resize', function() {
const newVisibleCards = Math.floor(window.innerWidth / cardWidth);
const newMaxIndex = Math.max(0, totalCards - newVisibleCards);
if (currentIndex > newMaxIndex) {
currentIndex = newMaxIndex;
updateCarousel();
}
});
});
</script>
<script id="dropdown-functionality">
document.addEventListener('DOMContentLoaded', function() {
const workTypeBtn = document.getElementById('work-type-btn');
const workTypeDropdown = document.getElementById('work-type-dropdown');
const selectedWorkType = document.getElementById('selected-work-type');
const dropdownOptions = workTypeDropdown.querySelectorAll('button');
workTypeBtn.addEventListener('click', function() {
workTypeDropdown.classList.toggle('hidden');
});
dropdownOptions.forEach(option => {
option.addEventListener('click', function() {
const value = this.getAttribute('data-value');
const text = this.textContent;
selectedWorkType.textContent = text;
workTypeDropdown.classList.add('hidden');
});
});
document.addEventListener('click', function(e) {
if (!workTypeBtn.contains(e.target) && !workTypeDropdown.contains(e.target)) {
workTypeDropdown.classList.add('hidden');
}
});
});
</script>
<script id="scroll-animations">
document.addEventListener('DOMContentLoaded', function() {
const observerOptions = {
threshold: 0.1,
rootMargin: '0px 0px -50px 0px'
};
const observer = new IntersectionObserver(function(entries) {
entries.forEach(entry => {
if (entry.isIntersecting) {
entry.target.classList.add('visible');
}
});
}, observerOptions);
const fadeElements = document.querySelectorAll('.fade-in');
fadeElements.forEach(el => observer.observe(el));
const previewModal = document.getElementById('preview-modal');
const previewTitle = document.getElementById('preview-title');
const previewScreens = document.getElementById('preview-screens');
const closePreviewBtn = document.getElementById('close-preview-btn');
const previewBtns = document.querySelectorAll('.preview-btn');
const previewData = {
'Wireframes & Sketches': [
'https://readdy.ai/api/search-image?query=User%20flow%20diagram%20with%20wireframe%20sketches%2C%20professional%20UX%20design%20process%2C%20modern%20design%20methodology%2C%20clean%20wireframe%20layout&width=400&height=300&seq=wireframe-1&orientation=landscape',
'https://readdy.ai/api/search-image?query=Low%20fidelity%20wireframe%20sketches%20for%20mobile%20app%20interface%2C%20professional%20UX%20design%20process%2C%20modern%20wireframe%20style%2C%20clean%20layout%20design&width=400&height=300&seq=wireframe-2&orientation=landscape',
'https://readdy.ai/api/search-image?query=Interactive%20prototype%20screens%20showing%20user%20flow%2C%20professional%20UX%20design%20process%2C%20modern%20interface%20design%2C%20clean%20prototype%20layout&width=400&height=300&seq=wireframe-3&orientation=landscape'
],
'Component Libraries': [
'https://readdy.ai/api/search-image?query=Design%20system%20showing%20button%20components%20and%20typography%2C%20professional%20UI%20design%20system%2C%20modern%20component%20library%2C%20clean%20design%20elements&width=400&height=300&seq=components-1&orientation=landscape',
'https://readdy.ai/api/search-image?query=Design%20system%20showing%20form%20elements%20and%20input%20fields%2C%20professional%20UI%20design%20system%2C%20modern%20component%20library%2C%20clean%20form%20design&width=400&height=300&seq=components-2&orientation=landscape',
'https://readdy.ai/api/search-image?query=Design%20system%20showing%20color%20palette%20and%20icons%2C%20professional%20UI%20design%20system%2C%20modern%20component%20library%2C%20clean%20design%20tokens&width=400&height=300&seq=components-3&orientation=landscape'
],
'Figma Collaboration': [
'https://readdy.ai/api/search-image?query=Figma%20workspace%20showing%20team%20collaboration%20features%2C%20professional%20design%20tool%20interface%2C%20modern%20design%20workflow%2C%20clean%20team%20workspace&width=400&height=300&seq=figma-1&orientation=landscape',
'https://readdy.ai/api/search-image?query=Figma%20interface%20showing%20design%20handoff%20process%2C%20professional%20design%20tool%20interface%2C%20modern%20design%20workflow%2C%20clean%20developer%20handoff&width=400&height=300&seq=figma-2&orientation=landscape',
'https://readdy.ai/api/search-image?query=Figma%20prototype%20mode%20showing%20interactive%20connections%2C%20professional%20design%20tool%20interface%2C%20modern%20design%20workflow%2C%20clean%20prototype%20view&width=400&height=300&seq=figma-3&orientation=landscape'
]
};
function openPreviewModal(title) {
previewTitle.textContent = title;
previewScreens.innerHTML = '';
previewData[title].forEach(imageUrl => {
const div = document.createElement('div');
div.className = 'aspect-[4/3] bg-gray-800 !rounded-lg overflow-hidden';
div.innerHTML = `<img src="${imageUrl}" alt="${title} preview" class="w-full h-full object-cover">`;
previewScreens.appendChild(div);
});
previewModal.classList.remove('hidden');
document.body.style.overflow = 'hidden';
}
function closePreviewModal() {
previewModal.classList.add('hidden');
document.body.style.overflow = '';
}
previewBtns.forEach(btn => {
btn.addEventListener('click', function() {
const title = this.closest('.bg-gray-900').querySelector('h3').textContent;
openPreviewModal(title);
});
});
closePreviewBtn.addEventListener('click', closePreviewModal);
previewModal.querySelector('.absolute').addEventListener('click', function(e) {
if (e.target === this) closePreviewModal();
});
});
</script>
<script id="video-modal">
document.addEventListener('DOMContentLoaded', function() {
const startWatchingBtn = document.getElementById('start-watching-btn');
const videoModal = document.getElementById('video-modal');
const modalOverlay = document.getElementById('modal-overlay');
const closeModalBtn = document.getElementById('close-modal-btn');
function openModal() {
videoModal.classList.remove('hidden');
document.body.style.overflow = 'hidden';
}
function closeModal() {
videoModal.classList.add('hidden');
document.body.style.overflow = '';
}
startWatchingBtn.addEventListener('click', openModal);
closeModalBtn.addEventListener('click', closeModal);
modalOverlay.addEventListener('click', closeModal);
});
</script>
<script id="smooth-scroll">
document.addEventListener('DOMContentLoaded', function() {
const navLinks = document.querySelectorAll('nav a[href^="#"]');
navLinks.forEach(link => {
link.addEventListener('click', function(e) {
e.preventDefault();
const targetId = this.getAttribute('href');
const targetElement = document.querySelector(targetId);
if (targetElement) {
const offsetTop = targetElement.offsetTop - 80;
window.scrollTo({
top: offsetTop,
behavior: 'smooth'
});
}
});
});
});
</script>
</body>
